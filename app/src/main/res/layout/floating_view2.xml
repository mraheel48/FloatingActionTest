<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:onClick="Clicking"
        android:tint="@android:color/white"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:alpha="0"
        android:clickable="true"
        android:onClick="Clicking"
        android:tint="@android:color/white"
        android:visibility="visible"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fbMain"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_location_black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:alpha="0"
        android:clickable="true"
        android:onClick="Clicking"
        android:tint="@android:color/white"
        android:visibility="invisible"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fbTwo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo_black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:alpha="0"
        android:clickable="true"
        android:onClick="Clicking"
        android:tint="@android:color/white"
        android:visibility="invisible"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fbThree"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/music_note_black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:alpha="0"
        android:clickable="true"
        android:onClick="Clicking"
        android:tint="@android:color/white"
        android:visibility="invisible"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fbMain"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_alert_black" />
</androidx.constraintlayout.widget.ConstraintLayout>